@model DAO.VO.VeiculoVO
@{
    Layout = "~/Views/Shared/_layout.cshtml";
}
<div class="form-group col-md-12">
    <label>Veiculo</label>
    <input disabled class="form-control" value="@Model.marca / @Model.modelo" />
</div>
<div class="form-group col-md-6">
    <input readonly class="form-control" value="Cor" />
</div>
<div class="form-group col-md-6">
    <input readonly class="form-control" value="@Model.cor" />
</div>
<div class="form-group col-md-6">
    <input readonly class="form-control" value="Direcao" />
</div>
<div class="form-group col-md-6">
    <input readonly class="form-control" value="@Model.direcao" />
</div>
<div class="form-group col-md-6">
    <input readonly class="form-control" value="Airbag" />
</div>
<div class="form-group col-md-6">
    <input readonly class="form-control" value="@Model.airbag" />
</div>
<div class="form-group col-md-6">
    <input readonly class="form-control" value="Ar" />
</div>
<div class="form-group col-md-6">
    <input readonly class="form-control" value="@Model.ar" />
</div>
<div class="form-group col-md-6">
    <input readonly class="form-control" value="Ano Modelo" />
</div>
<div class="form-group col-md-6">
    <input readonly class="form-control" value="@Model.ano_modelo" />
</div>
<div class="form-group col-md-6">
    <input readonly class="form-control" value="Km" />
</div>
<div class="form-group col-md-6">
    <input readonly class="form-control" value="@Model.km" />
</div>
<div class="form-group col-md-6">
    <input readonly class="form-control" value="Placa" />
</div>
<div class="form-group col-md-6">
    <input readonly class="form-control" value="@Model.placa" />
</div>
<div class="form-group col-md-6">
    <input readonly class="form-control" value="Obs" />
</div>
<div class="form-group col-md-6">
    <input readonly class="form-control" value="@Model.obs" />
</div>

<form method="post" action="/Venda/GravarVenda">
    <input type="hidden" value="@Model.veiculoid" name="veiculo_id" />

    <div class="form-group col-md-12">
        <label>Data</label>
        <input class="form-control" required type="date" name="data" value="@ViewBag.data" />
    </div>
    <div class="form-group col-md-12">
        <label>Valor</label>
        <input class="form-control" required name="valor" value="@ViewBag.valor" />
    </div>

    <div class="form-group col-md-12">
        <label>Forma de pagamento</label>
        <select class="form-control" required name="forma_pagamento">
            <option value="">Seleciona</option>
            <option value="1">Pix</option>
            <option value="2">Cartão</option>
            <option value="3">Financiamento</option>
            <option value="4">Consorcio</option>
        </select>
    </div>
    <div class="form-group col-md-12">
        <label>Selecione o cliente</label>
        <select class="form-control" required name="clienteID" onchange="Selecionar(this.value)">
            <option>Selecione</option>
            @foreach (var item in ViewBag.Clientes)
            {
                <option value="@item.id_cliente">@item.nome_cliente</option>

            }
        </select>
    </div>
    <div class="form-group col-md-12">
        <label>Descrição</label>
        <input class="form-control" name="descricao" value="@ViewBag.descricao" />
    </div>
    <button class="btn btn-success btn-lg">Gravar venda</button>
</form>