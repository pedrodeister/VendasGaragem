
@{
    Layout = "~/Views/Shared/_layout.cshtml";
}

<form method="post" action="/Venda/FiltrarVendas">
    
        <div class="form-group col-md-12">
            <label>Data Inicial</label>
            <input class="form-control" required type="date" name="dataInicial" value="@ViewBag.dataInicial" />
        </div>
        <div class="form-group col-md-12">
            <label>Data Final</label>
            <input class="form-control" required type="date" name="dataFinal" value="@ViewBag.dataFinal" />
        </div>
        <br/>
        <center>
            <button class="btn btn-success">Mostrar vendas</button>
        </center>
</form>
<br/>

@if (ViewBag.Vendas != null)
{

        <div class="panel panel-default">
            <div class="panel-heading">
                Vendas:
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Data</th>
                                <th>Nome do cliente</th>
                                <th>Marca</th>
                                <th>Modelo</th>
                                <th>Forma de pagamento</th>
                                <th>Valor</th>
                                <th>Descricao</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.Vendas)
                            {
                                <tr class="odd gradeX">
                                    <td>@item.Data.ToShortDateString()</td>
                                    <td>@item.NomeCliente</td>
                                    <td>@item.Marca</td>
                                    <td>@item.Modelo</td>
                                    <td>@item.FormaPagamento</td>
                                    <td>@item.Valor</td>
                                    <td>@item.Descricao</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>

}
